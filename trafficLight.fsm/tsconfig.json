	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["es6"],
		"module": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ES2021",
    "allowJs": true,
    "outDir": "./built",
  },
	"include": ["src/**/*", "../client/machine/**/*.js"],
  "exclude": ["node_modules", ".vscode"]

}